<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sagar.birthday">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:roundIcon="@drawable/bithh"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <activity android:name="com.example.sagar.birthday.StartActivity"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity android:name="com.example.sagar.birthday.birthdayList"
            android:theme="@style/Theme.Design.NoActionBar"
            android:label="Birthday List"
            android:parentActivityName="com.example.sagar.birthday.MainActivity" >

        </activity>

        <activity android:name=".MainActivity"
            android:theme="@style/Theme.Design.NoActionBar"/>
    </application>

</manifest>